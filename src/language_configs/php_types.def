// Comments
DEF_TYPE("comment", METADATA_COMMENT, NODE_TEXT, NODE_TEXT, 0x08)

// Attributes (PHP 8+)
DEF_TYPE("attribute_list", METADATA_ANNOTATION, NONE, NONE, 0)
DEF_TYPE("attribute", METADATA_ANNOTATION, FIND_IDENTIFIER, NONE, 0)

