# Test 8: Parameter precedence and consistency
# ============================================
query I
SELECT COUNT(*) > 0 as consistent_parameters
FROM read_ast('test/data/python/simple.py', 'python', 
    context := 'normalized',
    source := 'lines',
    structure := 'minimal')
WHERE name IS NOT NULL OR name IS NULL;
----
true

