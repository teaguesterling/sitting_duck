# Test with actual AST data
statement ok
CREATE TEMP TABLE test_ast AS 
SELECT * FROM parse_ast('
def hello():
    return "world"
    
class MyClass:
    def method(self):
        print("test")
', 'python');

# Test filtering with predicate functions
query II
SELECT name, semantic_type_to_string(CASE WHEN semantic_type < 0 THEN (256 + semantic_type) ELSE semantic_type END::UTINYINT)
FROM test_ast
WHERE is_definition(CASE WHEN semantic_type < 0 THEN (256 + semantic_type) ELSE semantic_type END::UTINYINT) AND name IS NOT NULL
ORDER BY node_id;
----
hello	DEFINITION_FUNCTION
MyClass	DEFINITION_CLASS
method	DEFINITION_FUNCTION

query II
SELECT context.name, semantic_type_to_string(CASE WHEN context.semantic_type < 0 THEN (256 + context.semantic_type) ELSE context.semantic_type END::UTINYINT)
FROM test_ast
WHERE is_call(CASE WHEN context.semantic_type < 0 THEN (256 + context.semantic_type) ELSE context.semantic_type END::UTINYINT)
ORDER BY node_id;
----
NULL	COMPUTATION_CALL

# Test all searchable types are valid
query I
WITH types AS (
    SELECT unnest(get_searchable_types()) as type_code
)
SELECT COUNT(*) = COUNT(DISTINCT semantic_type_to_string(type_code))
FROM types
WHERE semantic_type_to_string(type_code) NOT LIKE 'UNKNOWN%';
----
true

