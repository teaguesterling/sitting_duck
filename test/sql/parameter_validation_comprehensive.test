# Test 10: Default parameter behavior
# ==================================
query I
SELECT 
    (default_params.count = explicit_params.count) as defaults_work
FROM (
    SELECT COUNT(*) as count
    FROM read_ast('test/data/python/simple.py', 'python')
) default_params,
(
    SELECT COUNT(*) as count  
    FROM read_ast('test/data/python/simple.py', 'python', 
        context := 'normalized',
        source := 'lines',
        structure := 'full',
        peek := 'smart')
) explicit_params;
----
true

