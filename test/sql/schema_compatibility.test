    FROM read_ast_flat(['test/data/python/simple.py', 'test/data/javascript/simple.js'], 'auto')
) flat_result,
(
    SELECT COUNT(*) as total
    FROM read_ast_hierarchical(['test/data/python/simple.py', 'test/data/javascript/simple.js'], 'auto')
) hier_result;
