/**
 * @defgroup css_at_rules At-Rules
 * @brief CSS at-rule directives
 *
 * CSS at-rules:
 * - `@media` - responsive breakpoints
 * - `@import` - external stylesheet import
 * - `@keyframes` - animation definition
 * - `@supports` - feature detection
 * - `@charset` - character encoding
 * - `@namespace` - XML namespace
 * @{
 */

/// @brief Generic at-rule - `@rule { }`
DEF_TYPE("at_rule", DEFINITION_CLASS, CUSTOM, FUNCTION_WITH_PARAMS, ASTNodeFlags::IS_CONSTRUCT)

/// @brief Media statement - `@media screen and (min-width: 768px)`
DEF_TYPE("media_statement", DEFINITION_CLASS, NODE_TEXT, FUNCTION_WITH_PARAMS, ASTNodeFlags::IS_CONSTRUCT)

/// @brief Import statement - `@import url("file.css")`
DEF_TYPE("import_statement", EXTERNAL_IMPORT, CUSTOM, FUNCTION_WITH_PARAMS, ASTNodeFlags::IS_CONSTRUCT)

/// @brief Namespace statement - `@namespace svg url(...)`
DEF_TYPE("namespace_statement", DEFINITION_MODULE, FIND_IDENTIFIER, NONE, ASTNodeFlags::IS_CONSTRUCT)

/// @brief Keyframes statement - `@keyframes animation-name`
DEF_TYPE("keyframes_statement", DEFINITION_CLASS, FIND_IDENTIFIER, FUNCTION_WITH_PARAMS, ASTNodeFlags::IS_CONSTRUCT)

/// @brief Supports statement - `@supports (display: grid)`
DEF_TYPE("supports_statement", DEFINITION_CLASS, NODE_TEXT, FUNCTION_WITH_PARAMS, ASTNodeFlags::IS_CONSTRUCT)

/// @brief Charset statement - `@charset "UTF-8"`
DEF_TYPE("charset_statement", METADATA_DIRECTIVE, CUSTOM, NONE, ASTNodeFlags::IS_CONSTRUCT)

/** @} */ // end css_at_rules

