# Test 7: Verify file location fields are identical
# ==================================================

query I
SELECT COUNT(*) = 0 as no_location_mismatches
FROM (
    SELECT 
        f.start_line as flat_sl, h.source.start_line as hier_sl,
        f.start_column as flat_sc, h.source.start_column as hier_sc,
        f.end_line as flat_el, h.source.end_line as hier_el,
        f.end_column as flat_ec, h.source.end_column as hier_ec
    FROM read_ast_flat('test/data/python/simple.py', 'python') f
    JOIN read_ast_hierarchical('test/data/python/simple.py', 'python') h
        ON f.node_id = h.node_id
    WHERE f.start_line != h.source.start_line
       OR f.start_column != h.source.start_column
       OR f.end_line != h.source.end_line
       OR f.end_column != h.source.end_column
);
----
true

# Test 8: Verify tree structure fields are identical
# ===================================================

query I
SELECT COUNT(*) = 0 as no_structure_mismatches
FROM (
    SELECT 
        COALESCE(f.parent_id, -1) as flat_pid, 
        COALESCE(h.structure.parent_id, -1) as hier_pid,
        f.depth as flat_depth, h.structure.depth as hier_depth,
        f.sibling_index as flat_si, h.structure.sibling_index as hier_si,
        f.children_count as flat_cc, h.structure.children_count as hier_cc,
        f.descendant_count as flat_dc, h.structure.descendant_count as hier_dc
    FROM read_ast_flat('test/data/python/simple.py', 'python') f
    JOIN read_ast_hierarchical('test/data/python/simple.py', 'python') h
        ON f.node_id = h.node_id
    WHERE COALESCE(f.parent_id, -1) != COALESCE(h.structure.parent_id, -1)
       OR f.depth != h.structure.depth
       OR f.sibling_index != h.structure.sibling_index
       OR f.children_count != h.structure.children_count
       OR f.descendant_count != h.structure.descendant_count
);
----
true

